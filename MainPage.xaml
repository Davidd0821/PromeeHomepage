<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
        
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Promee_Homepage.MainPage">

    <Shell.TitleView>
        <Image 
               Source="promeelogobig.png"
               Margin="-65,0,0,0"
            />
    </Shell.TitleView>


    <AbsoluteLayout>
        <CarouselView
            x:Name="CarView"
            IndicatorView="indicatorView"
            >

            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout
                     Margin="0,60,0,0"
                    BackgroundColor="White"
                    Padding="100"
                    HeightRequest="700"
                    >
                    <Label FontSize="Medium" FontAttributes="Bold" HorizontalTextAlignment="Center" Text="{Binding Title}" />
                     <Label FontSize="Medium" FontAttributes="Bold" HorizontalTextAlignment="Center" Text="{Binding Description}" />
                    </VerticalStackLayout>
            </DataTemplate>
        </CarouselView.ItemTemplate>
    </CarouselView>

        <IndicatorView x:Name="indicatorView" 
                       Margin="155,40,0,0" 
                       Padding="0"
                       HorizontalOptions="Center" />

        
    </AbsoluteLayout>
</ContentPage>
